<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:IBAL.BO;assembly=BL" x:Class="PL.ListOfDronesViewWindow"
        mc:Ignorable="d"
        Title="ListOfDronesViewWindow" Height="640" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="StatusSelector" Margin="27,29,27,0" Grid.Column="2" SelectedIndex="3" SelectionChanged ="StatusChoose" FontSize="15" FontWeight="Normal"/>

        <ComboBox x:Name="WeightSelecter" Margin="27,29,27,0" Grid.Column="3" SelectedIndex="3" SelectionChanged ="WeightChoose" FontSize="15" FontWeight="Normal"/>

        <TextBox x:Name="TBD" HorizontalAlignment="Left" Margin="10,0,0,0" Text="choose element" TextWrapping="Wrap" VerticalAlignment="Center" Width="170" Height="27">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.941"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <ListView x:Name="ListOfDronesView" Grid.Row="1" Margin="10,10,10,10" RenderTransformOrigin="0.831,0.089" Grid.ColumnSpan="4" MouseDoubleClick="ClickedItem" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="add drone" Grid.Column="1" Margin="40,19,0,16" Click="Button_Click" HorizontalAlignment="Left" Width="120"  />
        <Label Content="Status selector" Grid.Column="2" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="144" Height="24" FontWeight="Bold"/>
        <Label Content="weight selector" Grid.Column="3" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="144" Height="24" FontWeight="Bold"/>
    </Grid>
</Window>
