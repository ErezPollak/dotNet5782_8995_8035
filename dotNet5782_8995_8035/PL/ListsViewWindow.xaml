<Window
           
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:IBAL.BO;assembly=BL" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Class="PL.ListsViewWindow"
        mc:Ignorable="d"
        Title="Lists View" Height="550" Width="1225" Loaded="Loded"
        ResizeMode="NoResize">

    <Window.Resources>

    </Window.Resources>

    <!--<Window.Background>
        <ImageBrush ImageSource = "/images/5.jpg" Stretch="UniformToFill" />
    </Window.Background>-->

    <StackPanel>
        <Button Content="X" HorizontalAlignment="Right"  Height="39" Width="52" Click="XButton" Background="#FFF90B0B" FontWeight="Bold" FontSize="20" Grid.Column="5" Margin="254,0,0,0" Grid.ColumnSpan="2"/>

        <TabControl
            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
            TabStripPlacement="Top"
        >
            <TabItem x:Name="DronesView" Width="200">
                <TabItem.Header>
                    <StackPanel
                    Height="auto"
                    Width="auto">
                        <materialDesign:PackIcon
                      Kind="Airplane"
                      Width="24"
                      Height="24"
                      HorizontalAlignment="Center" />
                        <TextBlock
                      Text="Drone List"
                      HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>

                <Grid x:Name="MainGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="234*"/>
                        <ColumnDefinition Width="71*"/>
                        <ColumnDefinition Width="44*"/>
                        <ColumnDefinition Width="261*"/>
                        <ColumnDefinition Width="305*"/>
                        <ColumnDefinition Width="293*"/>
                        <ColumnDefinition Width="12*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="400*"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="StatusSelector" ItemsSource="{Binding}" Margin="27,24,28,5" Grid.Column="2" SelectedIndex="3" SelectionChanged ="StatusChoose" FontFamily="Segoe Print" Grid.ColumnSpan="2"/>

                    <ComboBox x:Name="WeightSelecter" ItemsSource="{Binding}" Margin="26,24,27,5" Grid.Column="4" SelectedIndex="3" SelectionChanged ="WeightChoose" FontFamily="Segoe Print"/>

                    <ListView x:Name="DroneList" ItemsSource="{Binding}" Grid.Row="1" Margin="10,10,10,10" RenderTransformOrigin="0.831,0.089" Grid.ColumnSpan="7" MouseDoubleClick="ClickedDroneInList" MinHeight="5" >
                        <ListView.Background>
                            <ImageBrush Opacity="10" ImageSource="/images/5.jpg"/>
                        </ListView.Background>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header = "ID" DisplayMemberBinding="{Binding Path = Id}" />
                                <GridViewColumn Header = "Model" DisplayMemberBinding="{Binding Path = Model}" />
                                <GridViewColumn Header = "Weight" DisplayMemberBinding="{Binding Path = Weight}" />
                                <GridViewColumn Header = "Battery" DisplayMemberBinding="{Binding Path = Battery , Converter={StaticResource converters}}" />
                                <GridViewColumn Header = "Status" DisplayMemberBinding="{Binding Path = Status}" />
                                <GridViewColumn Header = "location" DisplayMemberBinding="{Binding Path = Location}" />
                                <GridViewColumn Header = "ParcelId" DisplayMemberBinding="{Binding Path = ParcelId}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Add Drone" Margin="0,12,0,12" Click="AddDrone_Click" HorizontalAlignment="Center" Width="180" Grid.ColumnSpan="2"  />
                    <Label Content="Status selector" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="37,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Label Content="weight selector" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="80,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>

                </Grid>
            </TabItem>

            <TabItem Name="ParcelList" Width="200">
                <TabItem.Header>
                    <StackPanel
                    Height="auto"
                    Width="auto">
                        <materialDesign:PackIcon
                      Kind="GiftOutline"
                      Width="24"
                      Height="24"
                      HorizontalAlignment="Center" />
                        <TextBlock
                      Text="Parcel List"
                      HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="400*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Status selector" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="81,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <ComboBox x:Name="ParcelStatusSelector" ItemsSource="{Binding}" Margin="27,24,27,5" Grid.Column="1" SelectedIndex="3" SelectionChanged ="ParcelStatusChoose" FontFamily="Segoe Print"/>


                    <!--<Label Content="Status selector" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="81,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <ComboBox x:Name="Selector" ItemsSource="{Binding}" Margin="27,24,27,5" Grid.Column="1" SelectedIndex="3" SelectionChanged ="StatusChoose" FontFamily="Segoe Print"/>

                    <Label Content="weight selector" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="81,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <ComboBox x:Name="Selecter" ItemsSource="{Binding}" Margin="27,24,27,5" Grid.Column="2" SelectedIndex="3" SelectionChanged ="WeightChoose" FontFamily="Segoe Print"/>-->

                    <ListView x:Name="ListOfParcelsView" ItemsSource="{Binding}" Grid.Row="1" Margin="10,10,10,10" RenderTransformOrigin="0.831,0.089" Grid.ColumnSpan="5" MouseDoubleClick="ClickedParcelInList" MinHeight="5" >
                        <ListView.Background>
                            <ImageBrush Opacity="10" ImageSource="/images/5.jpg"/>
                        </ListView.Background>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header = "Id" DisplayMemberBinding="{Binding Path = Id}" />
                                <GridViewColumn Header = "SenderName" DisplayMemberBinding="{Binding Path = SenderName}" />
                                <GridViewColumn Header = "ReceiverName" DisplayMemberBinding="{Binding Path = ReceiverName}" />
                                <GridViewColumn Header = "Weight" DisplayMemberBinding="{Binding Path = Weight}" />
                                <GridViewColumn Header = "Priority" DisplayMemberBinding="{Binding Path = Priority}" />
                                <GridViewColumn Header = "Status" DisplayMemberBinding="{Binding Path = Status}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Content="Add Parcel" Margin="0,10,0,10" Click="AddParcel_Click" HorizontalAlignment="Center" Width="180"  />

                </Grid>

            </TabItem>


            <TabItem Name="BaseStationList" Width="200">
                <TabItem.Header>
                    <StackPanel
                    Height="auto"
                    Width="auto">
                        <materialDesign:PackIcon
                      Kind="HomeLightningBoltOutline"
                      Width="24"
                      Height="24"
                      HorizontalAlignment="Center" />
                        <TextBlock
                      Text="Base Station List"
                      HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="305*"/>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="235*"/>
                        <ColumnDefinition Width="305*"/>
                        <ColumnDefinition Width="293*"/>
                        <ColumnDefinition Width="12*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="400*"/>
                    </Grid.RowDefinitions>


                    <!--<Label Content="weight selector" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="81,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <ComboBox x:Name="Selecter" ItemsSource="{Binding}" Margin="27,24,27,5" Grid.Column="2" SelectedIndex="3" SelectionChanged ="WeightChoose" FontFamily="Segoe Print"/>-->

                    <ListView x:Name="ListOfBaseStationsView" ItemsSource="{Binding}" SelectedIndex="0" Margin="10,10,10,10" RenderTransformOrigin="0.831,0.089" MouseDoubleClick="ClickedBaseStationInList" MinHeight="5" Grid.ColumnSpan="6" Grid.Row="1" >
                        <ListView.Background>
                            <ImageBrush Opacity="10" ImageSource="/images/5.jpg"/>
                        </ListView.Background>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header = "Id" DisplayMemberBinding="{Binding Path = Id}" />
                                <GridViewColumn Header = "Name" DisplayMemberBinding="{Binding Path = Name}" />
                                <GridViewColumn Header = "FreeChargingSlots" DisplayMemberBinding="{Binding Path = FreeChargingSlots}" />
                                <GridViewColumn Header = "TakenCharingSlots" DisplayMemberBinding="{Binding Path = TakenCharingSlots}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <ComboBox x:Name="NumberOfSlotsSelector" ItemsSource="{Binding}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="215" Height="32" SelectionChanged="BaseStationGuopingSelected" Grid.ColumnSpan="2" Margin="45,0,0,0"/>
                    <Label Content="Label" Grid.Column="2" HorizontalAlignment="Left" Margin="119,7,0,0" VerticalAlignment="Top"/>

                </Grid>

            </TabItem>


            <TabItem Name="CustomerList" Width="100">
                <TabItem.Header>
                    <StackPanel
                    Height="auto"
                    Width="auto">
                        <materialDesign:PackIcon
                      Kind="Account"
                      Width="24"
                      Height="24"
                      HorizontalAlignment="Center" />
                        <TextBlock
                      Text="Customer List"
                      HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="400*"/>
                    </Grid.RowDefinitions>

                    <!--<Label Content="Status selector" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="81,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <ComboBox x:Name="Selector" ItemsSource="{Binding}" Margin="27,24,27,5" Grid.Column="1" SelectedIndex="3" SelectionChanged ="StatusChoose" FontFamily="Segoe Print"/>

                    <Label Content="weight selector" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="39" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontFamily="Forte" FontSize="20" Background="Transparent" Foreground="#DDC3B63C" Margin="81,-7,0,0">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <ComboBox x:Name="Selecter" ItemsSource="{Binding}" Margin="27,24,27,5" Grid.Column="2" SelectedIndex="3" SelectionChanged ="WeightChoose" FontFamily="Segoe Print"/>-->

                    <ListView x:Name="ListOfCustomersView" ItemsSource="{Binding}" Margin="8,10,12,93" RenderTransformOrigin="0.831,0.089" MouseDoubleClick="ClickedCustomerInList" MinHeight="5" Grid.ColumnSpan="5" Grid.Row="1" >
                        <!--<ListView.Background>
                            <ImageBrush Opacity="10" ImageSource="/images/5.jpg"/>
                        </ListView.Background>-->
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header = "Id" DisplayMemberBinding="{Binding Path = Id}" />
                                <GridViewColumn Header = "Phone" DisplayMemberBinding="{Binding Path = Phone}" />
                                <GridViewColumn Header = "SentToAndDeliverd" DisplayMemberBinding="{Binding Path = SentToAndDeliverd}" />
                                <GridViewColumn Header = "SentToAnDNotDelivered" DisplayMemberBinding="{Binding Path = SentToAnDNotDelivered}" />
                                <GridViewColumn Header = "SentFromAndDeliverd" DisplayMemberBinding="{Binding Path = SentFromAndDeliverd}" />
                                <GridViewColumn Header = "SentToAnDNotDelivered" DisplayMemberBinding="{Binding Path = SentFromAndNotDeliverd}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Content="Add Customer" Margin="0,12,63,12" Click="AddCustomer_Click" HorizontalAlignment="Right" Width="180"/>

                </Grid>

            </TabItem>



        </TabControl>

    </StackPanel>
</Window>
